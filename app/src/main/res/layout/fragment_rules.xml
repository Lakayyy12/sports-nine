<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentRules">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/banner1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/customborder3"
            android:src="@drawable/banner222"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/ruleone"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                android:padding="15dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                app:backgroundTint="#19FB00"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXTRA TIME"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/ruletwo"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:backgroundTint="#19FB00"
                android:padding="25dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENALTIES SHOOTOUT"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/rulethree"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                android:padding="25dp"
                app:backgroundTint="#19FB00"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OVER/UNDER"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/rulefour"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                android:padding="25dp"
                app:backgroundTint="#19FB00"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DRAW NO BET"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/rulefive"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                android:padding="25dp"
                app:backgroundTint="#19FB00"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOUBLE CHANCE"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageButton
                android:id="@+id/rulesix"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:layout_height="150dp"
                android:background="@drawable/roundedbutton1"
                android:src="@drawable/ic_baseline_sports_24"
                android:padding="25dp"
                app:backgroundTint="#19FB00"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXACT SCORE"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ruleseven"
                    android:layout_width="150dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundedbutton1"
                    android:src="@drawable/ic_baseline_sports_24"
                    android:padding="25dp"
                    app:backgroundTint="#19FB00"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"
                    android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WAY HANDICAP"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ruleeight"
                    android:layout_width="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp"
                    android:background="@drawable/roundedbutton1"
                    android:src="@drawable/ic_baseline_sports_24"
                    android:padding="25dp"
                    app:backgroundTint="#19FB00"
                    android:scaleType="fitXY"
                    android:cropToPadding="true"
                    android:contentDescription="@string/image_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOAL SCORER"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>